mixin filter-mixin(data)
		div.container-fluid
			div.row
				div.col-md-10.col-md-offset-1.projects__elem-container
					div.container-fluid
						div.row
							div.col-md-10
								div.projects__elem-name #{data.name}
						div.row
							div.col-md-2(align="center")
								img(src="/data/VRClubUniverseData/VR_Demos/#{data.year}/#{data.executable}/#{data.image}").projects__elem-img
							div.col-md-8.col-md-offset-2.projects__elem-data
								div(class="row projects__elem-data__row")
									div.projects__elem-data__row-title Creator(s) : 
									div.projects__elem-data__row-data #{data.creator}
								div(class="row projects__elem-data__row") 
									div.projects__elem-data__row-title Description : 
									div.projects__elem-data__row-data #{data.description}
								div(class="row projects__elem-data__row")
									div.projects__elem-data__row-title Tags :
																			-console.log(data.tags);

										- data.tags = data.tags.replace(new RegExp("'", 'g'), '');

										- data.tags = data.tags.substring(1, data.tags.length - 1);
										- data.tags = data.tags.split(",");

										- for (let i = 0; i < data.tags.length; i++) {
												- data.tags[i] = data.tags[i].trim().substring(1, data.tags[i].length);
										- }

										-data.tags.push("" + data.year);
											- for (var key in data.tags)
												a.projects__elem-tag(href="/filter/?#{data.tags[key]}=true")
													span #{data.tags[key]}
										
